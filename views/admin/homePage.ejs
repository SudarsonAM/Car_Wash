<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <nav class="navbar sticky-top bg-light">
        <div class="container-fluid d-flex justify-content-around">
            <h4 class="fs-4">Hi <%=admin.firstname%> <%=admin.lastname%></h4>
            <form action="/admin/<%= id %>/addplace" method="post">
                <button class="btn btn-outline-dark">Add a Place</button>
            </form>            
            <form action="/admin/<%= id %>/addservice" method="post">
                <button class="btn btn-outline-dark">Add a Service</button>
            </form>
            <form  method="post" action="/admin/admin_logout">
                <button class="btn btn-light">LOG OUT</button>
            </form> 
        </div>
    </nav>
    <div class="container text-center my-4 mx-7">
        <div class="row my-auto">
            <div class="col">
                <h4>username</h4>
            </div>
            <div class="col">
                <h4>Service</h4>
            </div>
            <div class="col">
                <h4>Date</h4>
                <form action="/admin/homepage/<%=id%>/searchdate" method="post">
                    <input type="date" name="date" id="date">
                    <button class="btn btn-outline-secondary">Search</button>
                </form>
            </div>
            <div class="col">
                <h4>Place</h4>
                <form action="/admin/homepage/<%=id%>/searchplace" method="post">
                    <input type="text" name="place" id="place">
                    <button class="btn btn-outline-secondary">Search</button>
                </form>
            </div>
            <div class="col">
                <h4>Slot</h4>
            </div>
            <div class ="col">
                <h4>Status</h4>
            </div>
            <div class="col">
                <h4>Edit Status</h4>
            </div>
        </div>
    </div>
    
    <% for(let booking of totalBooking){%>
        <br>
        <div class="container text-center ">
            <div class="row my-auto">
                <div class="col">
                    <p class="fs-6"><%= booking.username  %></p> 
                </div>
                <div class="col">
                    <%= booking.service %> 
                </div>
                <div class="col">
                    <%= booking.date  %> 
                </div>
                <div class="col">
                    <%= booking.place %> 
                </div>
                <div class="col">
                    <%= booking.slot %> 
                </div>
                <div class ="col">
                    <%= booking.status%>
                </div>
                <div class="col">
                    <form action="/admin/homepage/<%=id%>/setstatus/<%= booking._id %> " method="post">
                        <label for="status">Edit Status</label>
                        <select id="status" name="status">
                        <% for(let x of statuss){ %>
                            <option name="<%= x %>"><%= x %></option> 
                        <% } %>
                        </select>
                        <br>
                        <button class="btn btn-outline-secondary">confirm</button>  
                    </form>
                </div>
            </div>
        </div> 
        <br>
    <% } %>  
</body>
</html>

